{
    "name": "led-file-maker",
    "version": "0.0.30",
    "private": true,
    "main": "public/app.js",
    "homepage": "./",
    "description": "App for generating raw video files from image sequences",
    "author": {
        "name": "Marece Williams",
        "email": "wbmmusic@gmail.com",
        "url": "https://www.marecewilliams.com"
    },
    "dependencies": {
        "@emotion/react": "^11.8.2",
        "@emotion/styled": "^11.8.1",
        "@mui/icons-material": "^5.5.0",
        "@mui/lab": "^5.0.0-alpha.72",
        "@mui/material": "^5.5.0",
        "@testing-library/jest-dom": "^5.16.2",
        "@testing-library/react": "^12.1.4",
        "@testing-library/user-event": "^13.5.0",
        "electron-updater": "^4.6.5",
        "foreman": "^3.0.1",
        "image-size": "^1.0.1",
        "jimp-native": "^0.0.4",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "react-scripts": "5.0.0",
        "web-vitals": "^2.1.4"
    },
    "scripts": {
        "start": "react-scripts start",
        "build": "react-scripts build",
        "test": "react-scripts test",
        "eject": "react-scripts eject",
        "electron": "electron .",
        "dev": "nf start",
        "refresh": "yarn upgrade --latest && yarn rebuild",
        "rebuild": "electron-rebuild -f",
        "package": "electron-builder build -c.extraMetadata.main=build/app.js --publish never",
        "deploy": "electron-builder build -c.extraMetadata.main=build/app.js --publish always",
        "backup": "git add . && git commit -m %NPM_PACKAGE_VERSION% && git push origin main",
        "try": "yarn build && yarn package ",
        "upload": "yarn build && yarn backup && yarn deploy "
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "electron": "^17.1.2",
        "electron-builder": "^22.14.13",
        "electron-rebuild": "^3.2.7"
    },
    "build": {
        "productName": "LED File Maker",
        "appId": "com.wbm.led-file-maker",
        "copyright": "WBM Tek",
        "extends": null,
        "npmRebuild": false,
        "files": [
            "build/**/*",
            "electron/*"
        ],
        "extraResources": [
            "public/locos/*"
        ],
        "win": {
            "icon": "public/logo512.png"
        }
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/wbmmusic/led-file-maker.git"
    }
}
